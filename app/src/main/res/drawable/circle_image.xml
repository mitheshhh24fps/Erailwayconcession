<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#fffffffd" />
            <gradient
                android:startColor="#F9E911"
                android:endColor="#a76e45"
                android:angle="270"
                android:type="linear"
                />
            <stroke
                android:width="1dp"
                android:color="#fffffdfc" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="0dp"
                android:top="4dp"
                android:right="0dp"
                android:bottom="4dp" />
        </shape>
    </item>

</selector>